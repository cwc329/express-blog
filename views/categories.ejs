<!DOCTYPE html>
<html>
  <%- include('./templates/htmlHeader.ejs');  %>
  <body>
    <%- include('./templates/titleAndNavbar.ejs'); %>
    <h4>
      <% categories.forEach( category => { %>
        <a href="/categories/<%= category.dataValues.name %>" class="btn btn-info <% if(path.includes(category.dataValues.name)){ %>active<% } %>"><%= category.dataValues.name %></a>
      <% }) %>
    </h4>
    <% if (path.includes('categories/')) { %>
      <%= articles %>
    <% } %>
  </body>
</html>
